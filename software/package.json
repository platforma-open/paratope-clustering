{
  "name": "@platforma-open/milaboratories.paratope-clustering.software",
  "version": "1.0.1",
  "type": "module",
  "description": "Block Software",
  "scripts": {
    "do-pack": "shx rm -f *.tgz && pl-pkg build && pnpm pack && shx mv platforma-open*.tgz package.tgz",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "build": "pl-pkg build",
    "prepublishOnly": "pl-pkg prepublish"
  },
  "block-software": {
    "artifacts": {
      "py-archive": {
        "type": "python",
        "registry": "platforma-open",
        "environment": "@platforma-open/milaboratories.runenv-python-3:3.12.10",
        "dependencies": {
          "toolset": "pip",
          "requirements": "requirements.txt"
        },
        "root": "./src"
      },
      "py-parapred": {
        "type": "python",
        "registry": "platforma-open",
        "environment": "@platforma-open/milaboratories.runenv-python-3.12.10-parapred:main",
        "dependencies": {
          "toolset": "pip",
          "requirements": "requirements-parapred.txt"
        },
        "root": "./src"
      }
    },
    "entrypoints": {
      "run-parapred-pipeline": {
        "binary": {
          "artifact": "py-parapred",
          "cmd": [
            "python",
            "{pkg}/run_parapred_pipeline.py"
          ]
        },
        "docker": {
          "artifact": {
            "type": "docker",
            "context": "./src",
            "dockerfile": "./src/Dockerfile-parapred"
          },
          "cmd": [
            "python",
            "/app/run_parapred_pipeline.py"
          ]
        }
      },
      "process-results": {
        "binary": {
          "artifact": "py-archive",
          "cmd": [
            "python",
            "{pkg}/process_results.py"
          ]
        }
      },
      "empty-check": {
        "binary": {
          "artifact": "py-archive",
          "cmd": [
            "python",
            "{pkg}/emptyCheck.py"
          ]
        }
      },
      "create-empty-files": {
        "binary": {
          "artifact": "py-archive",
          "cmd": [
            "python",
            "{pkg}/create_empty_files.py"
          ]
        }
      }
    }
  },
  "devDependencies": {
    "@platforma-open/milaboratories.runenv-python-3": "catalog:",
    "@platforma-open/milaboratories.runenv-python-3.12.10-parapred": "catalog:",
    "@platforma-sdk/package-builder": "catalog:"
  }
}
